@model InsuranceCompanyProject.Models.DataModels.TblCommunication

@{
    ViewBag.Title = "Yeni İletişim Bilgisi Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="alert alert-primary"><h2>Yeni İletişim Bilgisi Ekle</h2></div>

    @using (Html.BeginForm("CreateCommunication", "Communication", FormMethod.Post))
    {
        <div class="form-group mb-3">
            @Html.LabelFor(x => x.Adress)
            @Html.TextBoxFor(x => x.Adress, new { @class = "form-control", placeholder = "Adres giriniz" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(x => x.Mail)
            @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "E-posta giriniz" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(x => x.Telephone)
            @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control", placeholder = "Telefon numarası giriniz" })
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>


    }
</div>
