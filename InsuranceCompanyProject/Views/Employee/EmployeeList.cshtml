@model List<InsuranceCompanyProject.Models.DataModels.TblEmployee>

@{
    ViewBag.Title = "Çalışan Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="alert alert-info"><h2>Çalışan Listesi</h2></div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>

                <th>Görsel URL</th>

                <th>İsim</th>
                <th>Soyisim</th>

                <th>Görev</th>
                <th>Sosyal Medya 1</th>
                <th>Sosyal Medya 2</th>
                <th>Sosyal Medya 3</th>
                <th>Sosyal Medya 4</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmloyeeId</td>

                    <td>@employee.EmployeImageUrl</td>

                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmpolyeeSurname</td>
                    <td>@employee.EmployeeJob</td>
                    <td>@employee.EmployeeSocialMedia1</td>
                    <td>@employee.EmployeeSocialMedia2</td>
                    <td>@employee.EmployeeSocialMedia3</td>
                    <td>@employee.EmployeeSocialMedia4</td>
                    <td>
                        <a href="@Url.Action("UpdateEmployee", "Employee", new { id = employee.EmloyeeId })" class="btn btn-warning btn-sm">Güncelle</a>

                        @using (Html.BeginForm("DeleteEmployee", "Employee", FormMethod.Post, new { onsubmit = "return confirm('Silmek istediğinize emin misiniz?');" }))
                        {
                            @Html.Hidden("id", employee.EmloyeeId)
                            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("CreateEmployee", "Employee")" class="btn btn-primary">Yeni Çalışan Ekle</a>
</div>
