@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="@(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName)">

<head>
    <meta charset="utf-8">
    <title>@Resources.Messages.HeaderTitle</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Inter:slnt,wght-10..0,100..900&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link rel="stylesheet" href="/LifeSure-1.0.0/lib/animate/animate.min.css" />
    <link href="/LifeSure-1.0.0/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="/LifeSure-1.0.0/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/LifeSure-1.0.0/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/LifeSure-1.0.0/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">@Resources.Messages.HeaderLood</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Topbar Start -->
    <div class="container-fluid topbar px-0 px-lg-4 bg-light py-2 d-none d-lg-block">
        <div class="container">
            <div class="row gx-0 align-items-center">
                <div class="col-lg-8 text-center text-lg-start mb-lg-0">
                    <div class="d-flex flex-wrap">
                        <div class="border-end border-primary pe-3">
                            <a href="#" class="text-muted small"><i class="fas fa-map-marker-alt text-primary me-2"></i>@Resources.Messages.NavFind</a>
                        </div>
                        <div class="ps-3">
                            <a href="mailto:example@gmail.com" class="text-muted small"><i class="fas fa-envelope text-primary me-2"></i>example@gmail.com</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-center text-lg-end">
                    <div class="d-flex justify-content-end">
                        <div class="d-flex border-end border-primary pe-3">
                            <a class="btn p-0 text-primary me-3" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="btn p-0 text-primary me-3" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="btn p-0 text-primary me-3" href="#" title="Instagram Takipçi Sayısı: @(ViewBag.InstagramFollowerCount ?? 0)"><i class="fab fa-instagram"></i></a>

                            <a class="btn p-0 text-primary me-3" href="#" title="LinkedIn Takipçi Sayısı: @(ViewBag.LinkedInFollowerCount ?? 0)"><i class="fab fa-linkedin-in"></i></a>

                        </div>
                        <div class="dropdown ms-3">
                            <a href="#" class="dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                <small>
                                    <i class="fas fa-globe-europe text-primary me-2"></i>
                                    @(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "en" ?  Resources.Messages.Lan2 : Resources.Messages.Lan1)
                                </small>
                            </a>
                            <div class="dropdown-menu rounded">
                                <a href="@Url.Action("Change", "Language", new { lang = "tr", returnUrl = Request.RawUrl })" class="dropdown-item">@Resources.Messages.Lan1</a>
                                <a href="@Url.Action("Change", "Language", new { lang = "en", returnUrl = Request.RawUrl })" class="dropdown-item">@Resources.Messages.Lan2</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar & Hero Start -->
    <div class="container-fluid nav-bar px-0 px-lg-4 py-lg-0">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a href="#" class="navbar-brand p-0">
                    <h1 class="text-primary mb-0"><i class="fab fa-slack me-2"></i> Yıldız</h1>
                    <!-- <img src="img/logo.png" alt="Logo"> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-0 mx-lg-auto">
                        <a href="/LifeSure-1.0.0/index.html" class="nav-item nav-link active">@Resources.Messages.NavHome</a>
                        <a href="/LifeSure-1.0.0/about.html" class="nav-item nav-link">@Resources.Messages.NavAbout</a>
                        <a href="/LifeSure-1.0.0/service.html" class="nav-item nav-link">@Resources.Messages.NavServices</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" data-bs-toggle="dropdown">
                                <span class="dropdown-toggle">@Resources.Messages.NavPages</span>
                            </a>
                            <div class="dropdown-menu">
                                <a href="/LifeSure-1.0.0/feature.html" class="dropdown-item">@Resources.Messages.NavFeatures</a>
                                <a href="/LifeSure-1.0.0/team.html" class="dropdown-item">@Resources.Messages.NavTeam</a>
                                <a href="/LifeSure-1.0.0/testimonial.html" class="dropdown-item">@Resources.Messages.NavTest</a>
                                <a href="/LifeSure-1.0.0/FAQ.html" class="dropdown-item">@Resources.Messages.NavSSS</a>
                                <a href="/LifeSure-1.0.0/404.html" class="dropdown-item">@Resources.Messages.Nav404</a>
                            </div>
                        </div>
                        <a href="/LifeSure-1.0.0/contact.html" class="nav-item nav-link">@Resources.Messages.NavCommun</a>
                        <div class="nav-btn px-3">
                            <button class="btn-search btn btn-primary btn-md-square rounded-circle flex-shrink-0" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search"></i></button>
                            <a href="#" class="btn btn-primary rounded-pill py-2 px-4 ms-3 flex-shrink-0">@Resources.Messages.NavGet</a>
                        </div>
                    </div>
                </div>
                <div class="d-none d-xl-flex flex-shrink-0 ps-4">
                    <a href="#" class="btn btn-light btn-lg-square rounded-circle position-relative wow tada" data-wow-delay=".9s">
                        <i class="fa fa-phone-alt fa-2x"></i>
                        <div class="position-absolute" style="top: 7px; right: 12px;">
                            <span><i class="fa fa-comment-dots text-secondary"></i></span>
                        </div>
                    </a>
                    <div class="d-flex flex-column ms-3">
                        <span>@Resources.Messages.NavCallExper</span>
                        <a href="tel:+ 0123 456 7890"><span class="text-dark">@Resources.Messages.NavFree + 0123 456 7890</span></a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar & Hero End -->
    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Resources.Messages.ModalKeyWords</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body d-flex align-items-center bg-primary">
                    <div class="input-group w-75 mx-auto d-flex">
                        <input type="search" class="form-control p-3" aria-describedby="search-icon-1">
                        <span id="search-icon-1" class="btn bg-light border nput-group-text p-3"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Search End -->


    @RenderBody()

    <div class="container-fluid copyright py-4">
        <div class="container">
            <div class="row g-4 align-items-center">
                <div class="col-md-6 text-center text-md-end mb-md-0">
                    <span class="text-body"><a href="#" class="border-bottom text-white"><i class="fas fa-copyright text-light me-2"></i>@Resources.Messages.FooterSite</a>, @Resources.Messages.FooterReser</span>
                </div>
                <div class="col-md-6 text-center text-md-start text-body">
                    <!--/*** Bu şablon, aşağıdaki yazar kredi linki/attribution linki/backlink kaldırılmadığı sürece ücretsizdir. ***/-->
                    <!--/*** Şablonu, aşağıdaki yazar kredi linki/attribution linki/backlink olmadan kullanmak isterseniz, ***/-->
                    <!--/*** "https://htmlcodex.com/credit-removal" adresinden Kredi Kaldırma Lisansı satın alabilirsiniz. ***/-->
                    @Resources.Messages.FootterDesign <a class="border-bottom text-white" href="https://htmlcodex.com">HTML Codex</a> @Resources.Messages.FooterDist <a class="border-bottom text-white" href="https://themewagon.com">ThemeWagon</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Copyright End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square rounded-circle back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/LifeSure-1.0.0/lib/wow/wow.min.js"></script>
    <script src="/LifeSure-1.0.0/lib/easing/easing.min.js"></script>
    <script src="/LifeSure-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="/LifeSure-1.0.0/lib/counterup/counterup.min.js"></script>
    <script src="/LifeSure-1.0.0/lib/lightbox/js/lightbox.min.js"></script>
    <script src="/LifeSure-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>


    <!-- Template Javascript -->
    <script src="/LifeSure-1.0.0/js/main.js"></script>
</body>

</html>
