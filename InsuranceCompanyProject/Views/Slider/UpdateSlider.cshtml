@model InsuranceCompanyProject.Models.DataModels.TblSlider

@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="alert alert-warning"><h2>Slider Güncelle</h2></div>

    @using (Html.BeginForm("UpdateSlider", "Slider", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.SliderId)

        <label>Slider Başlık</label>
        @Html.TextBoxFor(m => m.SliderTitle, new { @class = "form-control" })
        <br />

        <label>Slider Alt Başlık</label>
        @Html.TextBoxFor(m => m.SliderSubtitle, new { @class = "form-control" })
        <br />

        <label>Slider Tanım</label>
        @Html.TextBoxFor(m => m.SliderDescription, new { @class = "form-control" })
        <br />

        <label>Slider Görsel Url</label>
        @Html.TextBoxFor(m => m.SliderImageUrl, new { @class = "form-control" })
        <br />

        <button type="submit" class="btn btn-success">Güncelle</button>
    }
</div>
